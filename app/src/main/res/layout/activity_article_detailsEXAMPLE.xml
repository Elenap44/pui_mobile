<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.RecipeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_example"
        android:textSize="34sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/SummaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_example"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:justificationMode="inter_word" />

    <TextView
        android:id="@+id/StepsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/steps_title"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/StepsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_example"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:justificationMode="inter_word" >

    </TextView>

    <Button
        android:id="@+id/AddFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/fav_add"></Button>

    <Button
        android:id="@+id/RemoveFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/fav_rem"></Button>

</LinearLayout>

</ScrollView>